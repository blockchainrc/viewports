.list
  .defaultListItem.list_li
    &:hover
      background-color #ccc
    width 100%
    height 52px
    font-family PingFangSC-Regular
    margin-top 1px
    background-color white
    div
      width 100%
      height 100%
      position relative
    &:nth-child(1)
      margin-top 0 !important
    .list_li_arrow
      position absolute
      top 50%
      margin-top -7px
      right 15px
      width 8px
      height 14px
    .list_li_left
      position absolute
      left 15px
      top 15px
      color #434343
      font-size 16px
      line-height 22px
    .list_li_right
      position absolute
      top 19px
      right 31px
      color #FA7E02
      font-size 14px
      line-height 12px
  .extensiveListItem.list_li
    margin-top 1px
    background-color white
    >div:nth-child(1)
      &:hover
        background-color #ccc
      width 100%
      height 52px
      font-family PingFangSC-Regular
      position relative

    >div:nth-child(1)
      >div:nth-child(1)
        position absolute
        left 15px
        top 15px
        color #434343
    >div:nth-child(2)
      font-size 14px
      line-height 22px
      color #ABABAB
      padding 15px
      padding-top 0
    .list_li_arrow
      position absolute
      top 19px
      right 15px
      width 8px
      height 14px
